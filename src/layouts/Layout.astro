---
import { getI18n } from '@/i18n'

interface Props {
  title: string
}

const { title } = Astro.props
const { currentLocale } = Astro

const i18n = getI18n({ currentLocale })
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={i18n.PAGE_INFO.SEO_DESCRIPTION} />
    <meta name='keywords' content={i18n.PAGE_INFO.SEO_KEYWORDS} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta name='color-scheme' content='light dark' />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      'Courier New',
      Courier,
      monospace;
    letter-spacing: -0.025rem;
  }

  body {
    padding-block: 4rem;
    display: grid;
    grid-template-columns: 1fr [section-start] 700px [section-end] 1fr;

    @media (max-width: 768px) {
      grid-template-columns: 1rem [section-start] 1fr [section-end] 1rem;
      padding-block: 1rem;
    }
  }

  body > * {
    grid-column: section;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  img {
    font-style: italic;

    max-width: 100%;
    vertical-align: middle;
    height: auto;
  }

  p {
    opacity: 0.85;
    font-size: 0.8rem;
    line-height: 1.5;
    text-wrap: pretty;
  }
  .print {
    display: none !important;
  }

  @media print {
    body {
      padding: 4rem 1rem;
    }
    .print {
      display: block !important;
    }
    .no-print {
      display: none !important;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: #011223;
    }
  }
</style>
